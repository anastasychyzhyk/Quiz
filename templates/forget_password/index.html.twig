{% extends 'base.html.twig' %}
{% block title %}Forget password{% endblock %}
{% block container %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 800px">
                    <div class="card-body">
                        <div class="card-header mb-3">{% trans %}Please input email{% endtrans %}</div>
                        {{ form_start(form) }}
                            <div class="form-group">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                                {% if error %}
                                <small class="form-text text-danger">{% trans %}Email could not be found.{% endtrans %}</small>
                                {% endif %}
                            </div>
                            <button type="submit" class="btn btn-primary">{% trans %}Restore{% endtrans %}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
