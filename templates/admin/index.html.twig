{% extends 'base.html.twig' %}

{% block title %}Admin!{% endblock %}
{% block container %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="mx-auto">
                <div class="col-md-10 md-auto">
                    <div class="card bg-light mb-3 mt-5 " style="width: 18rem;">
                        <div class="card-body">
                            <a href="{{ path('user_editor', {_locale: app.request.locale}) }}" class="card-link"><div class="text-center">{% trans %}Users{% endtrans %}</div></a>
                        </div>
                    </div>
                    <div class="card bg-light mb-3 mt-5" style="width: 18rem;">
                        <div class="card-body">
                            <a href="{{ path('question_editor', {_locale: app.request.locale}) }}" class="card-link"><div class="text-center">{% trans %}Questions{% endtrans %}</div></a>
                        </div>
                    </div>
                    <div class="card bg-light mb-3 mt-5" style="width: 18rem;">
                        <div class="card-body">
                            <a href="{{ path('quiz_editor', {_locale: app.request.locale}) }}" class="card-link"><div class="text-center">{% trans %}Quizzes{% endtrans %}</div></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
