{# app/Resources/views/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}
{% block container %}
    <header class="header">
        <div class="overlay"></div>
        <div class="container">
            <div class="description rellax">
                <h1>{% trans %}Hello, Welcome To our Quiz Website{% endtrans %}
                    <p>{% trans %}This is a great playground for playing with friends and random people :){% endtrans %}
                        {% trans %}This is a great playground for playing with friends and random people :){% endtrans %}
                    </p>
                    <button class="btn btn-outline-secondary btn-lg">{% trans %}start the game{% endtrans %}</button> </h1>
            </div>
        </div>
    </header>
    <div class="about text-center">
        <h1 class="p-3">{% trans %}About{% endtrans %}</h1>
        <div class="container">
            <div class="row">
                <div class="col-sm item">
                    <img src="../img/money.svg" alt="">
                    <p>{% trans %}To start the game, you just need to register. No payments or subscriptions - you can startplaying right away!{% endtrans %}</p>
                </div>
                <div class="col-sm item">
                    <img src="../img/friends.svg" alt="">
                    <p>{% trans %}Add other players as friends, play together and coordinate actions in a convenient chat for private messages!{% endtrans %}</p>
                </div>
                <div class="col-sm item">
                    <img src="../img/play-button.svg" alt="">
                    <p>{% trans %}The game works without using a flash, which means that you can even play on an iPad!{% endtrans %}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src={{ asset('js/rellax.min.js')}}></script>
    <script src={{ asset('js/rellax.js')}}></script>
{% endblock %}
