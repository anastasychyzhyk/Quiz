{% extends 'base.html.twig' %} {%
    block container %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="mx-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 800px">
                    <div class="card-body">
                        <div class="card-header mb-3 text-center">{% trans %}Question editor{% endtrans %}</div>
                        {{ form_start(form) }}
                        <div class="input-group mb-3">
                            {{ form_widget(form.searchedText, {'attr': {'class': 'form-control', 'placeholder': 'Input question...'}}) }}
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="submit" name="find" >{% trans %}Find{% endtrans %}</button>
                            </div>
                        </div>
                        <div class="btn-group">
                            <a href="{{ path('new_question', {_locale: app.request.locale}) }}" class="btn btn-outline-success" role="button" data-toggle="tooltip" title="{% trans %}Add new{% endtrans %}" aria-pressed="true">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-earmark-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M4 0h5.5v1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h1V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2z"/>
                                    <path d="M9.5 3V0L14 4.5h-3A1.5 1.5 0 0 1 9.5 3z"/>
                                    <path fill-rule="evenodd" d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z"/>
                                </svg>
                            </a>
                        </div>
                        <table class="table table-striped text-center">
                            <thead>
                            <tr>
                                <th>{{ knp_pagination_sortable(pagination, 'Question' |trans({}, 'messages'), 'q.text') }}</th>
                            </tr>
                            </thead>
                            <tbody id = "question">
                                {% for question in pagination %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('edit_question', {_locale: app.request.locale, id: question.id}) }}">
                                                {{ question.text }}
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        {{ knp_pagination_render(pagination) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}